<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/d_8"
    android:paddingTop="@dimen/d_8">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d_16" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="@dimen/d_0"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/d_5"
        android:layout_weight="1"
        android:gravity="center|left"
        android:text="@string/str_clerk"
        android:textColor="@color/black1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/d_10"
        android:src="@mipmap/gonext" />
</LinearLayout>