<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white" android:padding="@dimen/d_10">
    <ImageView
        android:id="@+id/iv_goods"
        android:layout_width="@dimen/d_100"
        android:layout_height="@dimen/d_80"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_toRightOf="@id/iv_goods"
        android:layout_marginLeft="@dimen/d_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_housename"
            android:layout_width="match_parent"
            android:lines="1"

            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:text="asdadasdads"/>
        <TextView
            android:ellipsize="end"
            android:lines="1"
            android:id="@+id/tv_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/orange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="傻傻的静安寺萨达萨达速度拉斯科技到底卡"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_settlementcycles"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/black2"

                />
            <TextView
                android:id="@+id/tv_commissionaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实打实大双方发生地方是范德萨范德萨发生"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/gray"
                android:lines="1"
                android:ellipsize="end"
                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_goods"
        android:layout_alignBottom="@id/iv_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_saletotal"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="售 245万"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_renttotal"
            android:layout_marginLeft="@dimen/d_10"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="租 1567/月"/>
    </LinearLayout>
</RelativeLayout>
