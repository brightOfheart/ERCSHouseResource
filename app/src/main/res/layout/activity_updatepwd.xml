<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title"
        layout="@layout/include_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
    <FrameLayout
        android:layout_margin="@dimen/d_10"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_phone_number"

            android:textColor="@color/black"
         />
        <TextView
            android:id="@+id/tv_phone"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/d_10"/>
    </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_1"
            android:background="@color/white2"/>
    <LinearLayout
        android:layout_margin="@dimen/d_10"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="@dimen/sp_14"
            android:layout_width="@dimen/d_70"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="@string/str_vcode"/>
        <EditText
            android:textSize="@dimen/sp_14"
            android:layout_width="@dimen/d_0"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="number"
            android:maxLength="6"
            android:layout_height="wrap_content"
            android:hint="@string/str_input_vcode"/>
        <TextView
            android:id="@+id/tv_verificationcode"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/str_get_vcode"/>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_1"
            android:background="@color/white2"/>
    <LinearLayout
        android:layout_margin="@dimen/d_10"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="@dimen/sp_14"
            android:layout_width="@dimen/d_70"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/str_resetpassword"/>
        <EditText
            android:layout_width="match_parent"
            android:textSize="@dimen/sp_14"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/str_resetpasswordhit"/>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_1"
            android:background="@color/white2"/>
    </LinearLayout>
</LinearLayout>