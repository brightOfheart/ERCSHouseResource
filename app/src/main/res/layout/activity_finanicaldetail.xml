<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/include_title" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7"
        android:paddingBottom="@dimen/d_5"
        android:paddingLeft="@dimen/d_16"
        android:paddingTop="@dimen/d_5"
        android:textColor="@color/black"
        android:textSize="@dimen/d_17" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_0"
        android:layout_weight="1"
        android:padding="@dimen/d_16" />

    <Button
        android:id="@+id/btn_reportingclients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d_10"
        android:background="@drawable/button_corners_bg"
        android:text="报备客户"
        android:textColor="@color/white" />
</LinearLayout>