<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/d_10"
        android:paddingLeft="@dimen/d_10"
        android:paddingRight="@dimen/d_10"
        android:paddingTop="@dimen/d_10">

        <EditText
            android:id="@+id/edit_1"
            android:layout_width="@dimen/d_90"
            android:layout_height="@dimen/d_40"
            android:background="@drawable/corners_bgno"
            android:inputType="number|numberDecimal"
            android:paddingLeft="@dimen/d_5"/>

        <TextView
            android:layout_width="@dimen/d_10"
            android:layout_height="@dimen/d_2"
            android:layout_marginLeft="@dimen/d_5"
            android:layout_marginRight="@dimen/d_5"
            android:background="@color/gray" />

        <EditText
            android:id="@+id/edit_2"
            android:layout_width="@dimen/d_90"
            android:layout_height="@dimen/d_40"
            android:background="@drawable/corners_bgno"
            android:inputType="number|numberDecimal"
            android:paddingLeft="@dimen/d_5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d_5"
            android:layout_marginRight="@dimen/d_10"
            android:text="万"
            android:textSize="@dimen/sp_16" />

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_corners_bg"
            android:text="筛选"
            android:textColor="@color/white" />
    </LinearLayout>

    <View
        android:id="@+id/view_null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></View>
</LinearLayout>
