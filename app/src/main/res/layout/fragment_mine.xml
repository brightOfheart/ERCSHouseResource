<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_120"
                    android:background="@color/system_color"
                    android:gravity="center|top"
                    android:paddingTop="@dimen/d_18"
                    android:textColor="@color/white"
                    android:textSize="@dimen/d_18" />

                <LinearLayout
                    android:id="@+id/ly_clerk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/d_8"
                    android:paddingTop="@dimen/d_8">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_16"
                        android:src="@mipmap/icon_clerk" />

                    <TextView
                        android:layout_width="@dimen/d_0"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/d_5"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="@string/str_clerk"
                        android:textColor="@color/black1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/d_10"
                        android:src="@mipmap/gonext" />
                </LinearLayout>

                <ercs.com.ercshouseresources.view.NoScrollListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_10"
                    android:orientation="vertical"
                    android:id="@+id/ly_manager">

                    <LinearLayout
                        android:id="@+id/ly_process"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/d_8"
                        android:paddingTop="@dimen/d_8">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d_16"
                            android:src="@mipmap/icon_set" />

                        <TextView
                            android:layout_width="@dimen/d_0"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/d_5"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="@string/str_process"
                            android:textColor="@color/black1" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/d_10"
                            android:src="@mipmap/gonext" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d_1"
                        android:background="@color/white2" />

                    <LinearLayout
                        android:id="@+id/ly_memberAssess"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/d_8"
                        android:paddingTop="@dimen/d_8">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d_16"
                            android:src="@mipmap/icon_set" />

                        <TextView
                            android:layout_width="@dimen/d_0"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/d_5"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="@string/str_memberAssess"
                            android:textColor="@color/black1" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/d_10"
                            android:src="@mipmap/gonext" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d_1"
                        android:background="@color/white2" />

                    <LinearLayout
                        android:id="@+id/ly_memberOutAssess"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/d_8"
                        android:paddingTop="@dimen/d_8">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d_16"
                            android:src="@mipmap/icon_set" />

                        <TextView
                            android:layout_width="@dimen/d_0"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/d_5"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="@string/str_memberOutAssess"
                            android:textColor="@color/black1" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/d_10"
                            android:src="@mipmap/gonext" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_10"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/d_8"
                    android:paddingTop="@dimen/d_8">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d_16"
                        android:src="@mipmap/icon_set" />

                    <TextView
                        android:layout_width="@dimen/d_0"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/d_5"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="@string/str_set"
                        android:textColor="@color/black1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/d_10"
                        android:src="@mipmap/gonext" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="40dp"
                android:background="@color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="@dimen/d_16"
                    android:layout_marginRight="@dimen/d_16"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/shardow"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/d_20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black1" />

                        <TextView
                            android:id="@+id/tv_dep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orange" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="好万家房产经纪服务有限公司" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="@dimen/d_1"
                    android:scaleType="fitCenter" />
            </FrameLayout>
        </FrameLayout>
    </ScrollView>
</LinearLayout>