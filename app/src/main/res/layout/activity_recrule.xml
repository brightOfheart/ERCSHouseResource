<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include
        android:id="@+id/title"
        layout="@layout/include_title" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="报备规则"
        android:paddingLeft="@dimen/d_16"
        android:textSize="@dimen/d_18"
        android:paddingTop="@dimen/d_16"
        android:textColor="@color/black"
        android:background="#F0F0F0"
        android:paddingBottom="@dimen/d_16"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/d_16"
        android:id="@+id/tv_1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带看规则"
        android:paddingLeft="@dimen/d_16"
        android:textSize="@dimen/d_18"
        android:paddingTop="@dimen/d_16"
        android:textColor="@color/black"
        android:background="#F0F0F0"
        android:paddingBottom="@dimen/d_16"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/d_16"
        android:id="@+id/tv_2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="成交规则"
        android:paddingLeft="@dimen/d_16"
        android:textSize="@dimen/d_18"
        android:paddingTop="@dimen/d_16"
        android:textColor="@color/black"
        android:background="#F0F0F0"
        android:paddingBottom="@dimen/d_16"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_0"
        android:layout_weight="1"
        android:padding="@dimen/d_16"
        android:id="@+id/tv_3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/system_color"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_phone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="咨询业务员"
            android:layout_marginLeft="@dimen/d_5"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:layout_marginLeft="@dimen/d_5"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_phone"
            android:layout_marginLeft="@dimen/d_5"
            android:textColor="@color/white"/>
        </LinearLayout>>
</LinearLayout>