<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corners_bgno">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="此账号已在别处登录"
    android:paddingTop="@dimen/d_5"
    android:paddingBottom="@dimen/d_5"
    android:textColor="@color/white"
    android:textSize="@dimen/d_16"
    android:background="@color/system_color"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginTop="@dimen/d_16"
        android:layout_marginLeft="@dimen/d_16"
        android:layout_marginRight="@dimen/d_16"
        android:text="重新登录"/>

</LinearLayout>