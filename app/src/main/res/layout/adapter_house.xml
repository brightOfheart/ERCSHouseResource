<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white" android:padding="@dimen/d_10">
<ImageView
    android:id="@+id/iv_goods"
    android:layout_width="@dimen/d_80"
    android:layout_height="@dimen/d_60"
    android:scaleType="fitXY"
    android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_toRightOf="@id/iv_goods"
        android:layout_marginLeft="@dimen/d_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:text="asdadasdads"/>
        <TextView
            android:textSize="@dimen/sp_12"
            android:textColor="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3室2厅*162m*南北"/>


    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_goods"
        android:layout_alignBottom="@id/iv_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="售 245万"/>
        <TextView
            android:layout_marginLeft="@dimen/d_10"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="租 1567/月"/>
    </LinearLayout>
</RelativeLayout>