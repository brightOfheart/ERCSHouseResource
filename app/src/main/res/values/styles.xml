<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/system_color</item>
        <item name="colorPrimaryDark">@color/system_color</item>
        <item name="colorAccent">@color/system_color</item>
    </style>
    <style name="dialogs" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="anim_pop_style">

            <item name="android:windowEnterAnimation">@anim/pop_start</item>
            <!-- 指定显示的动画xml -->
            <item name="android:windowExitAnimation">@anim/pop_end</item>
            <!-- 指定消失的动画xml -->
    </style>

</resources>
